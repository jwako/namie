<div class="row">
  <!-- left column -->
  <div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">訪問依頼</h3>
      </div><!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@work, url: u_request_confirm_path, html: { role: 'form' }) do |f| %>
        <div class="box-body">
          <div class="form-group">
            <label for="exampleInputEmail1">訪問日時</label>
            <div class='input-group datepicker'>
              <%= f.text_field :start_at, class: 'form-control', placeholder: '訪問してもらいたい日時を入力' %>
              <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            </div>
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">訪問場所</label>
            <%= f.text_field :address, class: "form-control", placeholder: 'ご自宅のご住所等、訪問してもらいたい場所を入力' %>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">依頼内容(オプション)</label>
            <% Commission.all.each do |c| %>
              <div class="checkbox">
                <label>
                  <%= check_box_tag "commissions[]", c.id %> <%= c.name %>
                </label>
              </div>
            <% end %>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">この人にお願いする</label>
            <%= select :area, :name, [['全地域', nil]] + (Area.all.map{|t| [t.name, t.id]}) %>

            <% Supporter.order(:id).limit(10).each do |s| %>
              <div class="radiobutton">
                <label>
                  <%= f.radio_button :supporter_id, s.id %>
                  <%= image_tag s.profile.profile_image, class: "img-circle", alt: "User Image", size: "75x75" %>
                  <%= s.profile.name %><br />
                  <% if s.services.size > 0 %>
                    対応可能スケジュール：<br />
                    <ul>
                    <% s.services.each do |serv| %>
                      <li><%= serv.week.name %>：<%= serv.start_time %> ~ <%= serv.end_time %></li>
                    <% end %>
                    </ul>
                  <% end %>
                  <% if s.commissions.size > 0 %>
                    対応可能内容
                    <ul>
                    <% s.commissions.each do |com| %>
                      <li><%= com.name %></li>
                    <% end %>
                    </ul>
                  <% end %>
                </label>
              </div>
            <% end %>
          </div>
          <div class="box-footer clearfix">
            <%= f.submit "確認", class: "btn btn-lg btn-primary pull-right", data: { disable_with: '' } %>
          </div>
        </div>
      <% end %>
    </div><!-- /.box -->
  </div>
</div>
