<div class="row">
  <!-- left column -->
  <div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">依頼内容確認</h3>
      </div><!-- /.box-header -->
      <%= form_tag(u_request_complete_path) do %>
        <form role="form">
          <div class="box-body">
            <ul class="todo-list">
              <li>
              <span>依頼者: <%= @work.user.profile.name %></span>
              </li>
              <li>
              <span>サポーター: <%= @work.supporter.profile.name %></span>
              </li>
              <li>
              <span>依頼日時: <%= @work.start_at %></span>
              </li>
              <% if @work.commissions %>
              <li>
              依頼内容
              <ul>
                <% @work.commissions.each do |c| %>
                  <li><%= c.name %></li>
                <% end %>
              </ul>
              </li>
              <% end %>
            </ul>
            <div class="form-group">
              <div class="box-footer clearfix">
                <%= submit_tag '依頼登録' %>
              </div>
              <p><%= link_to 'back', u_request_path %></p>
            </div>
          </div>
      <% end %>
    </div><!-- /.box -->
  </div>
</div>
