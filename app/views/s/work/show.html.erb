<div class="pure-g" style="position:relative">
  <!-- Video area -->
  <div class="pure-u-2-3" id="w-video-container">
      <p>作業風景</p>
      <video id="w-my-video" autoplay></video>
      <p>依頼者</p>
      <video id="w-their-video" muted="true" autoplay></video>
  </div>

  <!-- Steps -->
  <div class="pure-u-1-3">
    <div id="step1">
    </div>
    <!-- Make calls to others -->
    <div id="step2">
        <p><a data-no-turbolink='true' href="#" class="pure-button pure-button-success" id="make-call">作業を開始</a></p>
    </div>
    <!-- Call in progress -->
    <div id="step3">
      <p><a data-no-turbolink='true' href="#" class="pure-button pure-button-error" id="end-call">作業を終了</a></p>
    </div>
    <h3>現地の放射線量</h3>
    <img src="http://www.fmu.ac.jp/home/lib/radiation/motion.jpg" style="width:240px; height:120px;" class="img-thumbnail">

    <h3>現地の天気: <%= @forecast.try(:weather) %>, <%= @forecast.try(:temperature) %></h3>

    <h3>今日の作業</h3>
    <ul>
    <% @work.commissions.each do |commission| %>
      <li><%= commission.name %></li>
    <% end %>
    </ul>
  </div>
</div>

<div>
  <h3>目的地: <%= @work.address %></h3>
  <div id="map-canvas-target"></div>
</div>
